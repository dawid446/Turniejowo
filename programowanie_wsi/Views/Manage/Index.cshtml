@model programowanie_wsi.Models.IndexViewModel




<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-4">

        <hr />
        <div class="list-group">


            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword", null, new { @class = "list-group-item active" })
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }

            @Html.ActionLink("Turnieje", "Index", "Tournaments", null, new { @class = "list-group-item list-group-item-action" })
            @Html.ActionLink("Drużyny", "Index", "Teams", null, new { @class = "list-group-item list-group-item-action" })
        </div>

    </div>
    <div class="col">
        <h3>Profil użytkownika: @User.Identity.Name</h3>
    </div>
</div>